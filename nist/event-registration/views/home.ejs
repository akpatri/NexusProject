<!DOCTYPE html>
<html lang="en">

<head>
    <title>Events</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h2 class="text-center">Available Events</h2>
        <!-- Button to create new event -->
        <div class="text-center mb-3">
            <a href="/create-event" class="btn btn-primary">Create New Event</a>
        </div>
        <div class="row">
            <% events.forEach(event=> { %>
                <div class="col-md-4">
                    <div class="card mt-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= event.name %>
                            </h5>
                            <p class="card-text">
                                <%= event.description %>
                            </p>
                            <a href="/register/<%= event._id %>" class="btn btn-success">Register</a>
                            <a href="/view/<%= event._id %>" class="btn btn-secondary">View Registrations</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>



</body>

</html>